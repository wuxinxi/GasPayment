<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:divider="@drawable/layout_line"
    android:orientation="vertical"
    android:showDividers="middle|end">

    <include layout="@layout/toolbar"></include>

    <TextView
        android:id="@+id/safe"
        style="@style/more_layout_textView"
        android:drawableLeft="@mipmap/ic_safe"
        android:text="安全设置" />

    <TextView
        android:id="@+id/mch_id"
        style="@style/more_layout_textView"
        android:drawableLeft="@mipmap/ic_mchid"
        android:text="商户设置" />

    <TextView
        android:id="@+id/config"
        style="@style/more_layout_textView"
        android:drawableLeft="@mipmap/ic_config"
        android:text="全局设置" />

    <TextView
        android:id="@+id/version"
        style="@style/more_layout_textView"
        android:drawableLeft="@mipmap/ic_version"
        android:text="版本号" />

    <TextView
        android:id="@+id/checkUpdate"
        style="@style/more_layout_textView"
        android:drawableLeft="@mipmap/ic_update"
        android:text="检查更新" />

</LinearLayout>